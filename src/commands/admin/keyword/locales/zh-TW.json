{
  "name": "關鍵字",
  "description": "管理關鍵字回覆。",
  "subcommands": {
    "add": {
      "name": "新增",
      "description": "新增或更新關鍵字。",
      "options": {
        "type": {
          "name": "比對類型",
          "description": "比對類型。",
          "choices": {
            "exact": "完全比對",
            "contains": "包含比對"
          }
        },
        "keyword": {
          "name": "關鍵字",
          "description": "要監聽的關鍵字。"
        },
        "reply": {
          "name": "回覆",
          "description": "回覆的訊息。"
        }
      },
      "responses": {
        "success": "✅ 關鍵字「{{keyword}}」已成功新增/更新。"
      }
    },
    "remove": {
      "name": "移除",
      "description": "移除關鍵字。",
      "options": {
        "keyword": {
          "name": "關鍵字",
          "description": "要移除的關鍵字。"
        }
      },
      "responses": {
        "success": "✅ 關鍵字「{{keyword}}」已成功移除。"
      }
    },
    "list": {
      "name": "列表",
      "description": "列出所有已設定的關鍵字。",
      "responses": {
        "no_keywords": "❌ 目前沒有設定任何關鍵字。",
        "title": "**已設定的關鍵字：**",
        "list_item": "**{{keyword}}** (類型: {{match_type}}):\n> {{reply}}"
      }
    }
  },
  "general_error": "處理關鍵字指令時發生錯誤。"
}
