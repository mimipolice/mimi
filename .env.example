# .env.example

# ========== Discord Bot Core Settings ==========
# Your bot's token from the Discord Developer Portal
DISCORD_TOKEN=
# Your bot's application ID from the Discord Developer Portal
CLIENT_ID=

# ========== PostgreSQL Database Connection Settings ==========
# Database host (e.g., localhost)
DB_HOST=localhost
# Database port (PostgreSQL default is 5432)
DB_PORT=5432
# Database user
DB_USER=postgres
# Database password
DB_PASSWORD=
# Database name for the bot
DB_NAME=mimiDLC

# ========== Transcript Settings ==========
# The local file path where transcript HTML files should be saved (can be relative to project root)
TRANSCRIPT_PATH=./transcripts #usually the path to the public directory of your web server
#TRANSCRIPT_PATH=/var/www/html/transcripts
# The public base URL corresponding to the transcript path
TRANSCRIPT_BASE_URL=http://localhost:8080/transcripts

# ========== Development-Only Settings ==========
# (Optional) Used for instant command refreshing on a specific server during development
DEV_GUILD_ID=
