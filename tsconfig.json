{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,

    /* Path Aliases */
    "baseUrl": "./src",
    "paths": {
      "*": ["src/*"],
      "commands/*": ["src/commands/*"],
      "events/*": ["src/events/*"],
      "interactions/*": ["src/interactions/*"],
      "interfaces/*": ["src/interfaces/*"],
      "services/*": ["src/services/*"],
      "shared/*": ["src/shared/*"],
      "utils/*": ["src/utils/*"]
    },

    /* Output */
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

